<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management</title>
    <style>
        body {
            display: flex;
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #333;
            color: #fff;
            padding: 15px;
            height: 100vh;
            position: fixed;
        }

        .sidebar h1 {
            text-align: center;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
        }

        .sidebar ul li a:hover {
            text-decoration: underline;
        }

        .main-content {
            margin-left: 270px;
            padding: 20px;
            flex-grow: 1;
        }

        button {
            margin: 10px 0;
        }

        #example {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        #example th, #example td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        #example th {
            background-color: #333;
            color: #fff;
        }

        #example tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #example tr:hover {
            background-color: #f1f1f1;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }
    </style>
         <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
         <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <br>
        <ul>
            <li><a href="/admin/usermanagement">User Management</a></li>
            <br>
            <li><a href="#products">Category Management</a></li>
            <br>
            <li><a href="">Product Management</a></li>
            <br>
            <li><a href="">Order Management</a></li>
            <br>
            <li><a href="">Coupon Management</a></li>
            <br>
            <li><a href="">Sales</a></li>
            <br>
            <li><a href="">Offer Management</a></li>
            <br>
            <li><a href="/admin/adminLogin" id="logout-link">Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2>Category Management</h2>
            <button id="add-category-btn" class="btn-success" style="margin-right: 20px; padding: 8px 15px; font-weight: bold; cursor: pointer;">
                + Add Category
            </button>
        </div>
        
        <!-- Search and Filter Form -->
        <form action="/admin/categorymanagement" method="GET">
        </form>
        
        <!-- User Table -->
        <table id="example" class="table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>category name</th>
                    <th>status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach((category,index) => { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= category.category %></td>
                        <td>
                            <% if(category.isblocked){ %>
                                <span style="color: red;">unlisted</span>
                            <% } else { %>
                                <span style="color: green;">listed</span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script>
            // Add event listener to the "Add Category" button
      document.getElementById('add-category-btn').addEventListener('click', function () {
        // Redirect to the addcategory page
        window.location.href = "/admin/addcategory";
           });
        document.getElementById('logout-link').addEventListener('click', function (e) {
            e.preventDefault(); // Prevent the default link behavior

            Swal.fire({
                title: "Are you sure you want to logout?",
                icon: "question",
                showCancelButton: true,
                confirmButtonText: "Yes, logout",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the logout route
                    window.location.href = "/admin/adminLogin";
                }
            });
        });
    </script>
</body>
</html>