<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management</title>
    <style>
        /* General Styles */
        body { 
            font-family: Arial, sans-serif; 
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;
            background-color: #f5f5f5;
        }
        
        /* Sidebar Styles */
        .sidebar {
            width: 215px;
            background-color: #333;
            color: white;
            padding: 20px;
            height: 100vh;
            position: fixed;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }
        
        .sidebar h2 {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 1px solid #444;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 8px 10px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .sidebar ul li a:hover {
            background-color: #444;
        }
        
        /* Main Content Styles */
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .heading {
            flex-grow: 1;
            text-align: center;
            color: #333;
        }
        
        /* Table Styles */
        .main-content {
            margin-left: 270px;
            padding: 20px;
            flex-grow: 1;
        }

        button {
            margin: 10px 0;
        }

        #example {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        #example th, #example td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        #example th {
            background-color: #333;
            color: #fff;
        }

        #example tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #example tr:hover {
            background-color: #f1f1f1;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }
        .btn-blue {
            background-color: #007bfffb;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-blue:hover {
            background-color: #0056b3;
        }
        .btn-edit {
            background-color: #007bfffb;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            
            .main-content {
                margin-left: 0;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <ul>
            <li><a href="/admin/usermanagement">User Management</a></li>
            <li><a href="/admin/categorymanagement">Category Management</a></li>
            <li><a href="">Product Management</a></li>
            <li><a href="">Order Management</a></li>
            <li><a href="">Coupon Management</a></li>
            <li><a href="">Sales</a></li>
            <li><a href="">Offer Management</a></li>
            <li><a href="/admin/adminLogin" id="logout-link">Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2 class="heading" style="flex-grow: 1; text-align: center;">Category Management</h2>
            <button id="add-category-btn" class="btn-success" style="margin-right: 20px; padding: 8px 15px; font-weight: bold; cursor: pointer;">
                + Add Category
            </button>
        </div>
        
        <!-- Search and Filter Form -->
        <form action="/admin/categorymanagement" method="GET">
        </form>
        
        <!-- User Table -->
        <table id="example" class="table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>category name</th>
                    <th>status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach((category,index) => { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= category.name %></td>
                        <td>
                            <% if(category.islisted){ %>
                                <span style="color: red;">unlisted</span>
                            <% } else { %>
                                <span style="color: green;">listed</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (!category.islisted) { %>
                                <a href="/admin/unListcategory/<%= category._id %>" class="btn-success" style="background-color: red;">UnList</a>
                            <% } else { %>
                                <a href="/admin/unListcategory/<%= category._id %>" class="btn btn-danger" style="background-color: green;">List</a>
                            <% } %>
                            <a href="/admin/editcategory/<%= category._id %>" class=" btn-edit" >Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script>
            // Add event listener to the "Add Category" button
      document.getElementById('add-category-btn').addEventListener('click', function () {
        // Redirect to the addcategory page
        window.location.href = "/admin/addcategory";
           });
        document.getElementById('logout-link').addEventListener('click', function (e) {
            e.preventDefault(); // Prevent the default link behavior

            Swal.fire({
                title: "Are you sure you want to logout?",
                icon: "question",
                showCancelButton: true,
                confirmButtonText: "Yes, logout",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the logout route
                    window.location.href = "/admin/adminLogin";
                }
            });
        });
    </script>
</body>
</html>