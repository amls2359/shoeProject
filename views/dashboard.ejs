<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <style>
        body {
            display: flex;
            font-family: Arial, sans-serif;
            margin: 0; /* Remove default body margin */
        }

        .sidebar {
            width: 250px;
            background-color: #333;
            color: #fff;
            padding: 15px;
            height: 100vh;
            position: fixed;
        }

        .sidebar h1 {
            text-align: center;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
        }

        .sidebar ul li a:hover {
            text-decoration: underline;
        }

        .main-content {
            margin-left: 270px; /* Match the width of the sidebar */
            padding: 20px;
            flex-grow: 1; /* Take up remaining space */

        }
        button {
            margin: 10px 0;
        }
        /* Custom scrollbar styling */
.sidebar ul::-webkit-scrollbar {
    width: 8px; /* Width of the scrollbar */
}

.sidebar ul::-webkit-scrollbar-track {
    background: #444; /* Color of the track */
}

.sidebar ul::-webkit-scrollbar-thumb {
    background: #888; /* Color of the scrollbar thumb */
    border-radius: 4px; /* Rounded corners */
}

.sidebar ul::-webkit-scrollbar-thumb:hover {
    background: #aaa; /* Color of the scrollbar thumb on hover */
}
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <br>
        <ul>
            <li><a href="/admin/usermanagement">User Management</a></li>
            <br>
            <li><a href="#products">Category Management</a></li>
            <br>
            <li><a href="">Product Management</a></li>
            <br>
            <li><a href="">Order Management</a></li>
            <br>
            <li><a href="">Coupon Management</a></li>
            <br>
            <li><a href="">Sales</a></li>
            <br>
            <li><a href="">Offer Management</a></li>
            <br>
            <li><a href="/admin/adminLogin" id="logout-link">Logout</a></li>
        </ul>
    </div>
    <!-- Main Content -->
    <div class="main-content">
        <h2>WELCOME TO DASHBOARD</h2>
        <!-- Add your main content here -->
    </div>
    <script>
        document.getElementById('logout-link').addEventListener('click', function (e) {
            e.preventDefault(); // Prevent the default link behavior

            Swal.fire({
                title: "Are you sure you want to logout?",
                icon: "question",
                showCancelButton: true,
                confirmButtonText: "Yes, logout",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the logout route
                    window.location.href = "/admin/adminLogin";
                }
            });
        });
    </script>
</body>
</html>