<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <style>
        body { 
            font-family: Arial, sans-serif; 
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;
        }
        
        .sidebar {
            width: 215px;
            background-color: #333;
            color: white;
            padding: 20px;
            height: 100vh;
            position: fixed;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }
        
        .sidebar h1 {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            padding-bottom: 10px;
            border-bottom: 1px solid #444;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 8px 10px;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .sidebar ul li a:hover {
            background-color: #444;
        }
        
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }
        
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        
        .button {
            padding: 6px 12px;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
            border: none;
            cursor: pointer;
        }
        
        .add-button {
            background-color: #4CAF50;
        }
        
        .edit-button {
            background-color: #2196F3;
        }
        
        .delete-button {
            background-color: #f44336;
        }
        
        .status-listed {
            color: green;
            font-weight: bold;
        }
        
        .status-unlisted {
            color: red;
            font-weight: bold;
        }
        
        .uncategorized {
            color: #999;
            font-style: italic;
        }
        
        .no-products {
            text-align: center;
            padding: 20px;
            color: #666;
            font-size: 18px;
        }
        
        .toggle-button {
            padding: 6px 12px;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            border: none;
            transition: background-color 0.3s;
        }
        
        .toggle-listed {
            background-color: #4CAF50;
            color: white;
        }
        
        .toggle-unlisted {
            background-color: #f44336;
            color: white;
        }
        
        .product-image {
            max-height: 50px;
            max-width: 50px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <br>
        <ul>
            <li><a href="/admin/usermanagement">User Management</a></li>
            <br>
            <li><a href="/admin/categorymanagement">Category Management</a></li>
            <br>
            <li><a href="">Product Management</a></li>
            <br>
            <li><a href="">Order Management</a></li>
            <br>
            <li><a href="">Coupon Management</a></li>
            <br>
            <li><a href="">Sales</a></li>
            <br>
            <li><a href="">Offer Management</a></li>
            <br>
            <li><a href="/admin/adminLogin" id="logout-link">Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2 class="heading" style="flex-grow: 1; text-align: center;">Category Management</h2>
            <button id="add-category-btn" class="btn-success" style="margin-right: 20px; padding: 8px 15px; font-weight: bold; cursor: pointer;">
                + Add Category
            </button>
        </div>
        
        <!-- Search and Filter Form -->
        <form action="/admin/categorymanagement" method="GET">
        </form>
        
        <!-- User Table -->
        <table id="example" class="table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>category name</th>
                    <th>image</th>
                    <th>status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((products,index) => { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= products.name %></td>
                        <td><%=products.image %></td>
                        <td>
                            <% if(products.islisted){ %>
                                <span style="color: red;">unlisted</span>
                            <% } else { %>
                                <span style="color: green;">listed</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (!products.islisted) { %>
                                <a href="/admin/unListcategory/<%= category._id %>" class="btn-success" style="background-color: red;">UnList</a>
                            <% } else { %>
                                <a href="/admin/unListcategory/<%= category._id %>" class="btn btn-danger" style="background-color: green;">List</a>
                            <% } %>
                            <a href="/admin/editcategory/<%= category._id %>" class=" btn-edit" >Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</html>