<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UserManagement</title>
    <style>
        body {
            display: flex;
            font-family: Arial, sans-serif;
            margin: 0; /* Remove default body margin */
        }

        .sidebar {
            width: 250px;
            background-color: #333;
            color: #fff;
            padding: 15px;
            height: 100vh;
            position: fixed;
        }

        .sidebar h1 {
            text-align: center;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
        }

        .sidebar ul li a:hover {
            text-decoration: underline;
        }

        .main-content {
            margin-left: 270px; /* Match the width of the sidebar */
            padding: 20px;
            flex-grow: 1; /* Take up remaining space */
        }

        button {
            margin: 10px 0;
        }

        /* Table Styling */
        #example {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        #example th, #example td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        #example th {
            background-color: #333;
            color: #fff;
        }

        #example tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #example tr:hover {
            background-color: #f1f1f1;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        .table-striped tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        .table-striped th {
            background-color: #4CAF50;
            color: white;
        }

        .table-striped td {
            padding: 8px;
            border: 1px solid #ddd;
        }

        .table-striped tr:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <br>
        <ul>
            <li><a href="#users">User Management</a></li>
            <br>
            <li><a href="#products">Category Management</a></li>
            <br>
            <li><a href="">Product Management</a></li>
            <br>
            <li><a href="">Order Management</a></li>
            <br>
            <li><a href="">Coupon Management</a></li>
            <br>
            <li><a href="">Sales</a></li>
            <br>
            <li><a href="">Offer Management</a></li>
            <br>
            <li><a href="/admin/adminLogin">Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h2 style="text-align: center">User Management</h2>
    
        <!-- Search and Filter Form -->
        <form action="/admin/usermanagement" method="GET" style="margin-bottom: 20px;">
            <input
                type="text"
                name="search"
                placeholder="Search by username or email"
                value="<%= searchQuery %>"
            />
            <select name="status">
                <option value="">All Statuses</option>
                <option value="active" <%= statusFilter === 'active' ? 'selected' : '' %>>Active</option>
                <option value="inactive" <%= statusFilter === 'inactive' ? 'selected' : '' %>>Inactive</option>
            </select>
            <button type="submit">Search</button>
        </form>
    
        <!-- User Table -->
        <table id="example" class="table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% userdata.forEach((user, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.status || 'Active' %></td>
                        <td>
                            <% if(user.isblocked){%>
                                <span class="text-danger">Blocked</span>
                            <%} else {%>
                                <span class="text-success">Not Blocked</span>
                            <% } %>
                        </td>
                        <td>
                            <% if(user.isblocked){%>
                                <a href="/admin/unblockuser/<%=user.id" class="btn-success">Unblock</a>
                            <% } else {%>
                                <a href="/admin/blockuser/<%=user.id%>" class="btn-danger">Block</a>
                                <% }%>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>