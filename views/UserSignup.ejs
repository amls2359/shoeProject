<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup Form</title>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@200;300;400;500;600;700&display=swap");
  
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Open Sans", sans-serif;
    }

    body {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      width: 100%;
      padding: 0 10px;
      background: linear-gradient(to bottom right, #444, #111);
    }

    .wrapper {
      width: 350px;
      border-radius: 8px;
      padding: 25px;
      text-align: center;
      border: 1px solid rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      background: rgba(255, 255, 255, 0.1);
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 15px;
      color: #fff;
    }

    .input-field {
      position: relative;
      margin: 12px 0;
      width: 100%;
    }

    .input-field label {
      position: absolute;
      top: 50%;
      left: 10px;
      transform: translateY(-50%);
      color: #fff;
      font-size: 14px;
      pointer-events: none;
      transition: 0.2s ease;
    }

    .input-field input {
      width: 100%;
      background: rgba(255, 255, 255, 0.2);
      border: 1px solid #fff;
      padding: 10px;
      border-radius: 5px;
      color: #fff;
      font-size: 14px;
      outline: none;
    }

    .input-field input:focus ~ label,
    .input-field input:valid ~ label {
      font-size: 12px;
      top: -5px;
      left: 10px;
      background: #000;
      padding: 2px 5px;
    }

    button {
      background: #fff;
      color: #000;
      font-weight: 600;
      border: none;
      padding: 10px 16px;
      cursor: pointer;
      border-radius: 3px;
      font-size: 14px;
      transition: 0.3s ease;
      width: 100%;
      margin-top: 10px;
    }

    button:hover {
      color: #fff;
      background: rgba(255, 255, 255, 0.2);
      border: 1px solid #fff;
    }

    .register {
      text-align: center;
      margin-top: 20px;
      color: #fff;
      font-size: 14px;
    }

    .error-message {
      background: rgba(255, 0, 0, 0.7);
      color: white;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      display: none;
    }

    .success-message {
      background: rgba(0, 255, 0, 0.7);
      color: white;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      text-align: center;
      display: block;
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <h2>Signup</h2>

    <% if (typeof successMessage!=='undefined' && successMessage) { %>
      <div class="message-box success-message" id="success-message"><%=successMessage %></div>
    <% } %>

    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
      <div class="error-message" id="error-message"><%= errorMessage %></div>
    <% } %>

    <form action="/userSignupPost" method="post">
      <div class="input-field">
        <input type="text" name="username" required>
        <label>Enter your username</label>
      </div>
      <div class="input-field">
        <input type="email" name="email" required>
        <label>Enter your email</label>
      </div>
      <div class="input-field">
        <input type="password" name="password" required>
        <label>Enter your password</label>
      </div>
      <button type="submit">Sign Up</button>
      <div class="register">
        <p>Already have an account? <a href="/UserLogin">Login</a></p>
      </div>
    </form>
  </div>

  <script>
    window.onload = function() {
      const successBox = document.getElementById("success-message");
      const errorBox = document.getElementById("error-message");
  
      if (successBox) {
        successBox.style.display = "block";
        setTimeout(() => {
          window.location.href = "/UserLogin";
        }, 2000);
      }
  
      if (errorBox) {
        errorBox.style.display = "block";
        setTimeout(() => {
          errorBox.style.display = "none";
        }, 3000);
      }
    };
  </script>
</body>
</html>
